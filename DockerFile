# Use PHP with Apache
FROM php:8.1-apache

# Set working directory
WORKDIR /var/www/html

# Enable Apache Rewrite Module
RUN a2enmod rewrite

# Install required extensions
RUN docker-php-ext-install pdo pdo_mysql

# Copy app files
COPY . .

# Expose port 80
EXPOSE 80

# Start Apache
CMD ["apache2-foreground"]
